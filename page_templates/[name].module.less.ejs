@import '~antd/lib/style/themes/default.less';
@import '../../utils/utils.less';

.tableList {
    .tableListOperator {
        margin-bottom: 16px;
        button {
            margin-right: 8px;
        }
    }
}

:global {
    div > .ant-modal-mask {
        background-color: rgba(0, 0, 0, 0.65);
    }
    // 去掉number类型input右侧图标
    .ant-form-item-children {
        input::-webkit-outer-spin-button,
        input::-webkit-inner-spin-button {
            -webkit-appearance: none !important;
            margin: 0;
        }
        input[type="number"] {
            -moz-appearance: textfield;
        }
    }
    .data-wrapper {
        display: block;
        margin-bottom: 15px;
        margin-top: 5px;
        width: 100%;
        text-align: right;
        .data-item {
            display: inline-block;
            background: #FAAD14;
            padding: 5px 15px;
            margin-left: 15px;
            color: #fff;
            border-radius: 3px;
            cursor: pointer;
            &:hover {
                background: #fec73f;
            }
            &:active {
                background: #d3880b;
            }
        }
    }
}

.tableListForm {
    :global {
        .ant-form {
            .ant-form-item {
                margin-bottom: 24px;
                margin-right: 0;
                display: flex;
                > .ant-form-item-label {
                    width: auto;
                    line-height: 32px;
                    padding-right: 8px;
                }
                .ant-form-item-control {
                    line-height: 32px;
                }
            }
        }
        .ant-form-item-control-wrapper {
            flex: 1;
        }
    }
    .submitButtons {
        white-space: nowrap;
        margin-bottom: 24px;
    }
}

// 查看详情时隐藏分配按钮
:global {
    .hide-confirm-measure {
        .ant-modal-footer {
            .ant-btn-primary {
                display: none;
            }
        }
    }
}

.model {
    :global {
        .ant-modal-footer {
            text-align: center;
        }
        p {
            display: flex;
            strong {
                width: 128px;
                text-align: right;
                //text-align:justify;
                //text-align-last:justify;
            }
            span {
                flex: 1;
                max-height: 150px;
                overflow: auto;
                display: flex;
                flex-direction: column;
                em {
                    flex: 1;
                    font-style: normal;
                }
            }
        }
        .infoTitle {
            padding: 16px 0;
            margin: 0;
            font-size: 16px;
            line-height: 22px;
            font-weight: 500;
            color: rgba(0, 0, 0, 0.85);
        }
    }
}

.company_ids {
    :global {
        .ant-select-selection__rendered > ul > li {
            width: 100%;
        }
    }
}

@media screen and (max-width: @screen-lg) {
    .tableListForm :global(.ant-form-item) {
        margin-right: 24px;
    }
}

@media screen and (max-width: @screen-md) {
    .tableListForm :global(.ant-form-item) {
        margin-right: 8px;
    }
}
